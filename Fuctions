    function isPrime(num) {
    var count = 0;

    while (num > 0) {
        count = 0; 
        for (var i = 1; i <= num; i++) {
            if (num % i == 0) {
                count++;
            }
        }
        if (count == 2) {
            console.log(num + " is a prime number");
        } else {
            console.log(num + " is not a prime number");
        }
        num--;
    }
}
var inputNum = 3;
isPrime(inputNum);


